<div class="menu-primary-container js-mobileMenu">
    <ul class="menu-primary">
        {% for item in menu.items %}
            <li class="menu-primary-item {{ item.classes|raw }}{{ item.is_active ? ' isActive' : '' }}">
                <a href="{{ item.url }}">{{ item.title|raw }}</a>
            </li>
        {% endfor %}
    </ul>
    <span class="u-noDesktop mobile-menu-trigger js-mobileMenuTrigger">
        <span class="mobile-menu-line"></span>
        <span class="mobile-menu-line"></span>
        <span class="mobile-menu-line"></span>
    </span>
</div>