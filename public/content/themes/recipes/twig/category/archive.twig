<div class="box">
    <h1 class="hdg hdg_1 vr">{{ title|raw }}</h1>
    <ul class="blocks blocks_3up">
        {% for category in categories %}
            <li>
                <a class="recipeBlock" href="{{ category.permalink }}">
                    <img src="{{ category.image }}" />
                    <span class="recipeBlock_title">{{ category.title|raw }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>